		<put-attribute name="asset" value="/WEB-INF/inc/asset.jsp"></put-attribute>
		<put-attribute name="main_menu" value="/WEB-INF/inc/main_menu.jsp"></put-attribute>
	</definition>
	<definition name="*.*" template="/WEB-INF/views/layout/layout.jsp">
